<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.second_hand.model">
	<class name="Suggestion" table="tb_suggestion">
		<id name="suggId" >
			<generator class="sequence">
				<param name="sequence">seq_sugg_suggId</param>
			</generator>
		</id>
		<property name="content" type="string"></property>
		<property name="pubDate" type="string"></property>
	</class>

</hibernate-mapping>